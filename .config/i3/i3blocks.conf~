# i3blocks config file
#
# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=~/.scripts/$BLOCK_NAME
separator_block_width=15
markup=pango
full_text=
align=center
separator=false
color=#C9CCDB

# Volume indicator
#  instance defaults to Master
#  (other options e.g.: Capture [Name of audio device])
[volume]
interval=1

# Battery indicator
#  instance defaults to 0
#  (other options e.g.: 1 [Number of battery if you have multiple batteries])
[battery]
interval=5

# load average
[load]
interval=3

# Memory usage
#  instance defaults to Mem
#  (other options e.g.: Swap [Name of memory (which is used in free command])
[memory]
interval=3

